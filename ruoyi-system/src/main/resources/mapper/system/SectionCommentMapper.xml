<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SectionCommentMapper">

    <resultMap type="SectionComment" id="SectionCommentResult">
        <result property="id"           column="id"           />
        <result property="sectionId"    column="section_id"   />
        <result property="userId"       column="user_id"      />
        <result property="content"      column="content"      />
        <result property="parentId"     column="parent_id"    />
        <result property="createTime"   column="create_time"  />
        <result property="updateTime"   column="update_time"  />
        <result property="isDeleted"    column="is_deleted"   />
        <result property="deleteTime"   column="delete_time"  />
    </resultMap>

    <!-- 带用户信息的结果映射 -->
    <resultMap type="SectionComment" id="SectionCommentWithUserResult" extends="SectionCommentResult">
        <result property="userName"     column="user_name"    />
        <result property="userAvatar"   column="user_avatar"  />
        <result property="userRole"     column="user_role"    />
        <result property="replyCount"   column="reply_count"  />
    </resultMap>

    <sql id="selectSectionCommentVo">
        select id, section_id, user_id, content, parent_id,
               create_time, update_time, is_deleted, delete_time
        from section_comment
    </sql>

    <!-- 带用户信息的查询 -->
    <sql id="selectSectionCommentWithUserVo">
        select sc.id, sc.section_id, sc.user_id, sc.content, sc.parent_id,
               sc.create_time, sc.update_time, sc.is_deleted, sc.delete_time,
               u.real_name as user_name, u.avatar as user_avatar, u.role as user_role
        from section_comment sc
        left join user u on sc.user_id = u.id
    </sql>

    <select id="selectSectionCommentById" parameterType="Long" resultMap="SectionCommentWithUserResult">
        <include refid="selectSectionCommentWithUserVo"/>
        where sc.id = #{id} and sc.is_deleted = 0
    </select>

    <select id="selectSectionCommentList" parameterType="SectionComment" resultMap="SectionCommentResult">
        <include refid="selectSectionCommentVo"/>
        <where>
            is_deleted = 0
            <if test="sectionId != null">
                and section_id = #{sectionId}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="parentId != null">
                and parent_id = #{parentId}
            </if>
        </where>
        order by create_time desc
    </select>

    <!-- 查询小节的一级评论列表（含用户信息和回复数） -->
    <select id="selectTopCommentsBySectionId" resultMap="SectionCommentWithUserResult">
        select sc.id, sc.section_id, sc.user_id, sc.content, sc.parent_id,
               sc.create_time, sc.update_time, sc.is_deleted, sc.delete_time,
               u.real_name as user_name, u.avatar as user_avatar, u.role as user_role,
               (select count(*) from section_comment where parent_id = sc.id and is_deleted = 0) as reply_count
        from section_comment sc
        left join user u on sc.user_id = u.id
        where sc.section_id = #{sectionId}
          and sc.parent_id is null
          and sc.is_deleted = 0
        order by sc.create_time desc
    </select>

    <!-- 查询评论的回复列表 -->
    <select id="selectRepliesByParentId" resultMap="SectionCommentWithUserResult">
        <include refid="selectSectionCommentWithUserVo"/>
        where sc.parent_id = #{parentId}
          and sc.is_deleted = 0
        order by sc.create_time asc
    </select>

    <!-- 统计小节的评论数量 -->
    <select id="countCommentsBySectionId" resultType="int">
        select count(*) from section_comment
        where section_id = #{sectionId}
          and is_deleted = 0
    </select>

    <!-- 统计评论的回复数量 -->
    <select id="countRepliesByParentId" resultType="int">
        select count(*) from section_comment
        where parent_id = #{parentId}
          and is_deleted = 0
    </select>

    <insert id="insertSectionComment" parameterType="SectionComment" useGeneratedKeys="true" keyProperty="id">
        insert into section_comment
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="sectionId != null">section_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="content != null and content != ''">content,</if>
            <if test="parentId != null">parent_id,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="isDeleted != null">is_deleted,</if>
            <if test="deleteTime != null">delete_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="sectionId != null">#{sectionId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="content != null and content != ''">#{content},</if>
            <if test="parentId != null">#{parentId},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="isDeleted != null">#{isDeleted},</if>
            <if test="deleteTime != null">#{deleteTime},</if>
        </trim>
    </insert>

    <update id="updateSectionComment" parameterType="SectionComment">
        update section_comment
        <trim prefix="SET" suffixOverrides=",">
            <if test="content != null and content != ''">content = #{content},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <!-- 逻辑删除 -->
    <update id="deleteSectionCommentById">
        update section_comment
        set is_deleted = 1, delete_time = now()
        where id = #{id}
    </update>

    <update id="deleteSectionCommentByIds">
        update section_comment
        set is_deleted = 1, delete_time = now()
        where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

</mapper>
